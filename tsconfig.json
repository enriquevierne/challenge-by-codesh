{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"] // Corrigir o alias
        },
        "types": ["vite/client"],
        "moduleResolution": "node",
        "allowJs": true,
        "lib": ["ES2015", "DOM"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
    "exclude": ["node_modules"]
}
